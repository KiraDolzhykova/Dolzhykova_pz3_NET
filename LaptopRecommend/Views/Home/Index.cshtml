@{
    ViewData["Title"] = "Home WOW";
}

<div class="text-center">
    <h1 class="display-4">Форма побажань ноутбука</h1>
</div>

@model List<Laptop>

<h1>Введіть важливі для вас характеристики під час виробу ноутбука</h1>

<div class="form-container">
    <form method="post" action="/Home/Index">
        <div>
            <label for="priceUAH">Ціна (до):</label>
            <input type="number" id="priceUAH" name="priceUAH" step="0.01" required />
        </div>
        <div>
            <label for="brand">Бренд:</label>
            <input type="text" id="brand" name="brand" />
        </div>
        <div>
            <label for="processorBrand">Бренд процесора:</label>
            <input type="text" id="processorBrand" name="processorBrand" />
        </div>
        <div>
            <label for="processor">Процесор:</label>
            <input type="text" id="processor" name="processor" />
        </div>
        <div>
            <label for="numCores">Кількість ядер:</label>
            <input type="number" id="numCores" name="numCores" />
        </div>
        <div>
            <label for="ram">Оперативна пам'ять (ГБ):</label>
            <input type="number" id="ram" name="ram" />
        </div>
        <div>
            <label for="storage">Кількість пам'яті (ГБ):</label>
            <input type="number" id="storage" name="storage" />
        </div>
        <div>
            <label for="os">Операційна система:</label>
            <input type="text" id="os" name="os" />
        </div>
        <div>
            <label for="screen">Розмір екрану (дюйми):</label>
            <input type="number" id="screen" name="screen" step="0.1" />
        </div>
        <div>
            <button type="submit">Отримати рекомендації</button>
        </div>
    </form>
</div>

<style>
    .form-container {
        display: grid-inside;
        grid-template-columns: 1fr 7fr;
        gap: 0px;
        width: 70%;
        margin: 50px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
        font-size: 16px;
        font-weight: bold;
        color: #333;
        width: 30%;
        align-self: center;
    }

    input[type="number"],
    input[type="text"]{
        padding: 10px;
        width: 60%;
        margin: 10px 0;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        box-sizing: border-box;
    }

    button {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
        display: block;
    }

    button:hover {
        background-color: #45a049;
    }

    h1 {
        text-align: center;
        font-size: 24px;
        color: #333;
    }
</style>
